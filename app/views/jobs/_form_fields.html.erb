<table class="form">
	<tr>
  	<th>Company:</th>
  	<td><%= form.text_field :company_name %></td>
	</tr>
	<tr>
  	<th>URL:</th>
  	<td>
    	<%= form.text_field :company_website %><br/>
    	eg. http://www.incremental.ie/
  	</td>
	</tr>
	<tr>
  	<th>Title:</th>
  	<td>
    	<%= form.text_field :title %><br/>
    	eg. "Rails Developer" or "Merb Guru"
  	</td>
	</tr>
	<tr>
  	<th>Job Type:</th>
  	<td>
    	<%= form.select(:type_id, @types.collect {|t| [t.name, t.id]}, { :include_blank => true } ) %>
  	</td>
	</tr>
	<tr>
  	<th>Location:</th>
  	<td>
    	<%= form.select(:location_id, @locations.collect {|l| [l.name, l.id]}, { :include_blank => true } ) %>
  	</td>
	</tr>
	<tr>
  	<th>Description:</th>
  	<td>
			<%= form.text_area :description %>
  	</td>
	</tr>
	<tr>
  	<th>How to apply:</th>
  	<td>
    	<%= form.text_field :how_to_apply %>
  	</td>
	</tr>
	<tr class="private">
  	<th>Your Email:</th>
  	<td>
    	<%= form.text_field :company_email %><br />
			*This will remain private* - Please use a real email, you won't be able to edit the job without one.
  	</td>
	</tr>
</table>
