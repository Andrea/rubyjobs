
<h2 id="job_title"><%= h(@job.title) %> <span class="connective">at</span> <%= h(@job.company_name) %></h2>
<dl id="job_details">
  <dt>Type:</dt><dd><%= @job.type.name %></dd>
  <dt>Location:</dt><dd><%= @job.location.name %></dd>
	<dt>Posted:</dt><dd><%= time_ago_in_words(@job.created_at) %> ago</dd>
  <dt class="description">Description:</dt><dd class="description"><%= simple_format(@job.description) %></dd>
  <dt>How to apply:</dt><dd><%= h(@job.how_to_apply) %></dd>
</dl>

