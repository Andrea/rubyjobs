<!-- TODO: DMG: Move search div to partial -->
<div id="search">
	<form method="get" autocomplete="off">
	  <label for="search_term">Jobs searched as you type...</label>
		<input type="text" value="<%=h params[:search] %>" name="search" id="search_term" />
	</form>
</div>


<div id="results">
  <% link_to formatted_jobs_url(:rss, rss_link_attributes), :id => "rss_link"  do %>
		<span id="rss_search">RSS feed
      <%=h "for '#{params[:search]}'" if params[:search] %>
		</span>
	<% end %>
	
	<h1 id="results_header">
		Latest Ruby Jobs:
	</h1>

	<table id="job_list">
	<% if @jobs.length > 0 %>
		<%= render :partial => @jobs %>
	<% else %>
    <tr id="no_jobs"><td>No jobs found!</td></tr>
	<% end %>
	</table>

</div>
